<form method="post" asp-controller="~/Home/SetPeriod" asp-anti-forgery="true" autocomplete="off" >
    <div class="validation" asp-validation-summary="All"></div>
    <label style="margin: 10px;">URL:</label><input name="url" type="url" placeholder="https://" />
    <label style="margin: 10px;">Период с:</label><input name="start" type="datetime-local" /><label style="margin: 10px;">по:</label><input name="end" type="datetime-local" />
    <input type="submit" value="Применить" />
</form>

<table class="table">
    <thead>
        <tr><th>Дата проверки</th><th>Url-адрес</th><th>Доступность</th></tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr><td>@address.CheckDate</td><td>@address.HostName</td><td>@address.Availability</td></tr>
        }
    </tbody>
</table>
