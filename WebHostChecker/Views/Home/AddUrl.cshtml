@model WebHostChecker.ViewModels.SetAddressModel
@{
    ViewData["Title"] = "Добавить URL-адрес";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="AddUrl" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div><label>URL:</label><br /><input asp-for="WebAddress" /></div>
    <div><label>Периодичность проверки:</label><br /><input asp-for="Period" type="number" /></div>
    <input type="submit" value="Добавить" />
</form>